<div class="recipe-row">
    <div class="recipe">
        <span>Idea <%= index %></span>
        <h2><%= recipe.title %></h2>
        <div class="recipe-info">
            <% if (recipe.prepTime) { %>
            <p>Prep Time: <%= recipe.prepTime %> minutes</p>
            <% } %>
            <% if (recipe.cookTime) { %>
                <p>Cook time: <%= recipe.cookTime %> minutes</p>
                <% } %>

            <% if (recipe.serves) { %>
            <p>Serves: <%= recipe.serves %></p>
            <% } %>

           <!--  <% if (recipe.serves) { %>
            <p>Ingredients: <%= recipe.ingredients.map((i) => {return i.ingredient}).join(', ') %></p>
            <% } %> -->
        </div>
