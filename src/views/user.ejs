<html>

    <head>
        <% include includes/head %>
    </head>

    <body>

        <div id="Main" class="main">

            <% include includes/elements/user-login %>

            <div class="relative">
                <% include includes/elements/progress %>

                <!--for smoothstate.js animation-->
                <div class="animation-element" data-viewport="<%= viewport %>">
                    <!--creates border effect-->
                    <div class="body-wrap">
                        <section class="container fill-middle-medium">
                            <a class="button button-back" href="/" data-target="0">Back</a>

                            <h1 class="heading">User</h1>

                            <% if (user) { %>
                            <p>Logged in as: <b><%= user.display_name %></b></p>

                            <div class="flex-horizontal">
                                <button class="button-inline button-warning" data-post="/api/user/logout">Log
                                    Out</button>
                                <button class="button-inline button-error" data-post="/api/user/delete">Delete
                                    Account</button>
                            </div>
                            <% } else { %>
                            <p>You are not logged in</p>
                            <% } %>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </body>

</html>
